package Inventory;

import java.awt.*;

import javax.swing.*;

public class NewItem extends JPanel{
  public NewItem() {
    super(new GridLayout(1, 1));
    JFrame frame = new JFrame("New Item");
    JPanel panel = new JPanel(false);
    JLabel idLabel = new JLabel("Item ID");
    JTextField id = new JTextField(20);
    JLabel discriptionLabel = new JLabel ("Discription");
    JTextField discription = new JTextField();
    JLabel reminderLabel = new JLabel("Reminder");
    JTextField reminder = new JTextField();
    
    panel.add(idLabel);
    panel.add(id);
    panel.add(discriptionLabel);
    panel.add(discription);
    panel.add(reminderLabel);
    panel.add(reminder);
    frame.add(panel);
    frame.pack();
    frame.setVisible(true);
  }
}
